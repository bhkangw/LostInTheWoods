@{
    ViewData["Title"] = "Home Page";
}

<table class="table table-striped">
    <tr>
        <th>Name</th>
        <th>Length</th>
        <th>Elevation Change</th>
    </tr>
    @foreach(var t in ViewBag.trails)
    {
        <tr>
            <td>@t.Name</td>
            <td>@t.Length miles</td>
            <td>@t.Elevation feet</td>
        </tr>
    }
</table>
<br>
<a class="btn btn-primary" href="add">Add a New Trail</a>