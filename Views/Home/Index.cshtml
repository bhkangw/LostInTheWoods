<div class="container"><br>
    <div class="jumbotron">
        <h1>Lost in the Woods 🏞</h1>
        <p>A place to share and see local hiking trails 🏕</p>
    </div>
<table class="table table-striped">
    <tr>
        <th>Name</th>
        <th>Length</th>
        <th>Elevation Change</th>
    </tr>
    @foreach(var t in ViewBag.trails)
    {
        <tr>
            <td><a href="/trails/@t.id">@t.Name</a></td>
            <td>@t.Length miles</td>
            <td>@t.Elevation feet</td>
        </tr>
    }
</table>
<br>
<a class="btn btn-primary pull-right" href="add">Add a New Trail</a>
</div>